{
  "compilerOptions": {
    "target": "es6",
    "module": "NodeNext",
    "lib": ["ES6"],
    "outDir": "./dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true

  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "lib": "esnext",
  "ts-node": {
    "esm": true
  }
}
